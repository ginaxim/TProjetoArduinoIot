int trig = 4;
int echo = 5;
long micro, cm;

void setup()
{
  pinMode(trig, OUTPUT);
  pinMode(echo, INPUT);
  Serial.begin(9600);
}

void loop()
{
  // Iniciando o sensor
  digitalWrite(trig, LOW);
  delayMicroseconds(2);
    
  // Enviando o sinal por 10 microsegundos
  digitalWrite(trig, HIGH);
  delayMicroseconds(10);
    
  // Interrompendo o sinal
  digitalWrite(trig, LOW);
  
  // Lendo o tempo de viagem da onda em microsegundos
  micro = pulseIn(echo, HIGH);
  
  // Transformando em centímetros
  cm = micro / 58;
  
  // Imprimindo o valor em centímetros
  Serial.println(cm);
 
  // Atraso para evitar muitas leituras consecutivas
  delay(100);
}
